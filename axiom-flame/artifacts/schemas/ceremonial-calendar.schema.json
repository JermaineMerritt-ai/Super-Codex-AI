{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://codex-dominion.ai/schemas/ceremonial-calendar.v1.json",
  "title": "Ceremonial Calendar Schema",
  "description": "Schema for Ceremonial Calendar organizing all festival events",
  "type": "object",
  "required": [
    "calendar_id",
    "year",
    "daily_events",
    "seasonal_events", 
    "annual_events",
    "epochal_events",
    "millennial_events",
    "schema_version"
  ],
  "properties": {
    "calendar_id": {
      "type": "string",
      "pattern": "^CC-[0-9]{4}-[A-F0-9]{8}$",
      "description": "Unique Ceremonial Calendar identifier with format CC-YYYY-XXXXXXXX"
    },
    "year": {
      "type": "integer",
      "minimum": 1000,
      "maximum": 9999,
      "description": "Year for which the ceremonial calendar is generated"
    },
    "daily_events": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "month": {
            "type": "integer",
            "minimum": 1,
            "maximum": 12
          },
          "daily_invocations": {
            "type": "integer"
          },
          "dawn_festivals": {
            "type": "integer"
          }
        },
        "required": ["month", "daily_invocations", "dawn_festivals"]
      },
      "minItems": 12,
      "maxItems": 12,
      "description": "Daily events organized by month"
    },
    "seasonal_events": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "season": {
            "type": "string",
            "enum": ["spring_equinox", "summer_solstice", "autumn_equinox", "winter_solstice"]
          },
          "date": {
            "type": "string",
            "format": "date"
          },
          "festival_name": {
            "type": "string"
          },
          "proclamations": {
            "type": "integer"
          }
        },
        "required": ["season", "date", "festival_name", "proclamations"]
      },
      "description": "Seasonal festival events"
    },
    "annual_events": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "event": {
            "type": "string"
          },
          "date": {
            "type": "string",
            "format": "date"
          },
          "type": {
            "type": "string",
            "enum": ["annual_renewal", "annual_review", "annual_proclamation"]
          }
        },
        "required": ["event", "date", "type"]
      },
      "description": "Annual ceremonial events"
    },
    "epochal_events": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "event": {
            "type": "string"
          },
          "date": {
            "type": "string",
            "format": "date"
          },
          "type": {
            "type": "string",
            "enum": ["millennial_crown", "centennial_blessing", "epochal_renewal"]
          }
        },
        "required": ["event", "date", "type"]
      },
      "description": "Epochal ceremonial events"
    },
    "millennial_events": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "event": {
            "type": "string"
          },
          "date": {
            "type": "string",
            "format": "date"
          },
          "type": {
            "type": "string",
            "enum": ["cosmic_millennial", "universal_flame_lighting"]
          }
        },
        "required": ["event", "date", "type"]
      },
      "description": "Millennial ceremonial events"
    },
    "schema_version": {
      "type": "string",
      "const": "ceremonial-calendar.v1",
      "description": "Schema version identifier"
    }
  },
  "additionalProperties": false
}