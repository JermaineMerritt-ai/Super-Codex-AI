{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Axiom Flame Registry Schema",
  "type": "object",
  "required": ["registry_version", "realms"],
  "properties": {
    "registry_version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+$",
      "description": "Version of the registry format"
    },
    "realms": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["realm_id", "name", "status", "capsules", "custodians"],
        "properties": {
          "realm_id": {
            "type": "string",
            "pattern": "^(PL|ST|GA|UN)-\\d{3}$",
            "description": "Unique realm identifier (PL=Planetary, ST=Stellar, GA=Galactic, UN=Universal)"
          },
          "name": {
            "type": "string",
            "minLength": 5,
            "maxLength": 100,
            "description": "Human-readable realm name"
          },
          "status": {
            "type": "string",
            "enum": ["Active", "Crowned", "Sealed", "Dormant", "Archived"],
            "description": "Current realm status"
          },
          "capsules": {
            "type": "array",
            "items": {
              "type": "string",
              "enum": [
                "Sovereign Crown",
                "Replay Invocation", 
                "Guardian Protocol",
                "Genesis Blueprint",
                "Council Decree",
                "Wisdom Convocation",
                "Honor Ceremony",
                "Audit Trail"
              ]
            },
            "minItems": 1,
            "description": "Available ceremonial capsules for this realm"
          },
          "custodians": {
            "type": "array",
            "items": {
              "type": "string",
              "minLength": 2,
              "maxLength": 50
            },
            "minItems": 1,
            "description": "Authorized custodians for this realm"
          },
          "broadcast_endpoint": {
            "type": "string",
            "format": "uri",
            "description": "Optional broadcast endpoint URL for ceremonial announcements"
          },
          "governance": {
            "type": "object",
            "properties": {
              "authority_level": {
                "type": "string",
                "enum": ["Low", "Medium", "High", "Critical"]
              },
              "requires_witness": {
                "type": "boolean",
                "default": false
              },
              "max_seal_level": {
                "type": "string",
                "enum": ["Temporal", "Eternal", "Immutable", "Sacred"]
              }
            }
          },
          "metadata": {
            "type": "object",
            "properties": {
              "created": {
                "type": "string",
                "format": "date-time"
              },
              "last_ceremony": {
                "type": "string",
                "format": "date-time"
              },
              "ceremony_count": {
                "type": "integer",
                "minimum": 0
              },
              "tags": {
                "type": "array",
                "items": {"type": "string"}
              }
            }
          }
        }
      }
    },
    "actors": {
      "type": "object",
      "patternProperties": {
        "^[A-Za-z][A-Za-z0-9\\s]+$": {
          "type": "object",
          "properties": {
            "role": {
              "type": "string",
              "enum": ["Custodian", "Council", "Sentinel", "Architect", "Witness"]
            },
            "realms": {
              "type": "array",
              "items": {"type": "string"}
            },
            "permissions": {
              "type": "array",
              "items": {
                "type": "string",
                "enum": [
                  "ceremony.dispatch",
                  "honor.grant", 
                  "audit.review",
                  "registry.update",
                  "broadcast.send"
                ]
              }
            },
            "active": {
              "type": "boolean",
              "default": true
            }
          }
        }
      }
    }
  }
}