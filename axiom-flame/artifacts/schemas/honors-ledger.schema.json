{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Honors Ledger Schema",
  "type": "object",
  "required": ["honors_version", "entries"],
  "properties": {
    "honors_version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+$",
      "description": "Version of the honors ledger format"
    },
    "entries": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["honor_id", "name", "deed", "date", "insignia"],
        "properties": {
          "honor_id": {
            "type": "string",
            "pattern": "^HK-\\d{4}$",
            "description": "Unique honor keeper identifier"
          },
          "name": {
            "type": "string",
            "minLength": 2,
            "maxLength": 100,
            "description": "Name of the honored individual"
          },
          "deed": {
            "type": "string",
            "minLength": 10,
            "maxLength": 200,
            "description": "Description of the accomplished deed"
          },
          "date": {
            "type": "string",
            "pattern": "^\\d{4}-\\d{2}-\\d{2}$",
            "description": "Date of honor in YYYY-MM-DD format"
          },
          "insignia": {
            "type": "string",
            "minLength": 5,
            "maxLength": 100,
            "description": "Title or insignia awarded"
          },
          "notes": {
            "type": "string",
            "maxLength": 500,
            "description": "Additional notes or context"
          },
          "authority": {
            "type": "string",
            "enum": ["Council", "Sovereign", "Divine", "Eternal"],
            "description": "Authority level granting the honor"
          },
          "realm": {
            "type": "string",
            "description": "Realm where the honor was granted"
          },
          "witnesses": {
            "type": "array",
            "items": {"type": "string"},
            "description": "Names of witnesses to the honor"
          },
          "seal": {
            "type": "string",
            "enum": ["Temporal", "Eternal", "Immutable", "Sacred"],
            "description": "Seal level of the honor"
          }
        }
      }
    },
    "metadata": {
      "type": "object",
      "properties": {
        "created": {
          "type": "string",
          "format": "date-time"
        },
        "last_updated": {
          "type": "string",
          "format": "date-time"
        },
        "total_honors": {
          "type": "integer",
          "minimum": 0
        },
        "seal_counts": {
          "type": "object",
          "properties": {
            "temporal": {"type": "integer", "minimum": 0},
            "eternal": {"type": "integer", "minimum": 0},
            "immutable": {"type": "integer", "minimum": 0},
            "sacred": {"type": "integer", "minimum": 0}
          }
        }
      }
    }
  }
}