{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://codex-dominion.ai/schemas/festival-event.v1.json",
  "title": "Festival Event Schema",
  "description": "Schema for Festival Events in the sacred ceremonial system",
  "type": "object",
  "required": [
    "event_id",
    "timestamp",
    "cycle_type",
    "festival_name",
    "ceremonial_actions",
    "invocations",
    "honors_proclaimed",
    "abundance_shared",
    "participants",
    "crown_status",
    "eternal_binding",
    "schema_version"
  ],
  "properties": {
    "event_id": {
      "type": "string",
      "pattern": "^FE-[0-9]{4}-[0-9]{2}-[0-9]{2}-[A-F0-9]{8}$",
      "description": "Unique Festival Event identifier with format FE-YYYY-MM-DD-XXXXXXXX"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of when the festival event occurred"
    },
    "cycle_type": {
      "type": "string",
      "enum": ["daily", "seasonal", "annual", "epochal", "millennial"],
      "description": "Type of ceremonial cycle"
    },
    "festival_name": {
      "type": "string",
      "description": "Name of the festival or celebration"
    },
    "ceremonial_actions": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 1,
      "description": "List of ceremonial actions performed during the festival"
    },
    "invocations": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 1,
      "description": "Sacred invocations recited during the festival"
    },
    "honors_proclaimed": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "List of honors proclaimed during the festival"
    },
    "abundance_shared": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "List of abundance shared during the festival"
    },
    "participants": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 1,
      "description": "List of participants in the festival"
    },
    "crown_status": {
      "type": "string",
      "enum": [
        "DAWN CROWNED",
        "SEASON CROWNED", 
        "EPOCH CROWNED",
        "YEAR CROWNED",
        "MILLENNIA CROWNED"
      ],
      "description": "Status of ceremonial crowning"
    },
    "eternal_binding": {
      "type": "string",
      "description": "Description of how the festival binds into eternal cycles"
    },
    "schema_version": {
      "type": "string",
      "const": "festival-event.v1",
      "description": "Schema version identifier"
    }
  },
  "additionalProperties": false
}