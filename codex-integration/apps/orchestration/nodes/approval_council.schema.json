  "type": "object",
  "title": "Council Approval Node",
  "properties": {
    "role": {
      "type": "string",
      "enum": ["custodian", "council", "diaspora"],
      "description": "Role required for approval."
    },
    "policy_ref": {
      "type": "string",
      "description": "Reference to approval policy."
