[Unit]
Description=Codex Signal Engine Service
After=network.target

[Service]
Type=simple
WorkingDirectory=/opt/codex/capsule
ExecStart=/usr/bin/python3 services/signal_engine.py \
  --config config/capsule_policy_manifest.yaml
Restart=always
RestartSec=5
User=codex

[Install]
WantedBy=multi-user.target
