[Unit]
Description=Codex Custodian Dashboard
After=network.target codex-surveillance.service

[Service]
Type=simple
WorkingDirectory=/opt/codex/capsule
ExecStart=/usr/bin/python3 -m uvicorn dashboard.app:app \
  --host 0.0.0.0 --port 8080
Restart=always
RestartSec=5
User=codex

[Install]
WantedBy=multi-user.target
