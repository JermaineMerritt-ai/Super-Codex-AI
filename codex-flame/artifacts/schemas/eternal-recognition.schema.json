{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://codex-flame.codexdominion.app/schemas/eternal-recognition.schema.json",
  "title": "Eternal Recognition Scroll Entry",
  "description": "Sacred scroll entry for eternal recognition of flame keepers, bound into the Codex Dominion",
  "type": "object",
  "required": [
    "scroll_id",
    "timestamp",
    "contributor_name",
    "deeds_immortal",
    "dominion_binding",
    "flame_keeper_status",
    "recognition_level",
    "lineage_replay_id",
    "sovereignty_seal",
    "eternal_proclamation"
  ],
  "properties": {
    "scroll_id": {
      "type": "string",
      "pattern": "^ERS-[0-9]{4}-[0-9]{2}-[0-9]{2}-[A-F0-9]{8}$",
      "description": "Eternal Recognition Scroll identifier (ERS-YYYY-MM-DD-NNNNNNNN)"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "Moment of eternal inscription"
    },
    "contributor_name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 200,
      "description": "Sacred name of the flame keeper"
    },
    "deeds_immortal": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["deed_description", "deed_category", "luminosity_level"],
        "properties": {
          "deed_description": {
            "type": "string",
            "minLength": 10,
            "maxLength": 500,
            "description": "Detailed description of the immortal deed"
          },
          "deed_category": {
            "type": "string",
            "enum": [
              "Flame Keeping",
              "Code Crafting", 
              "Ceremonial Guidance",
              "Knowledge Preservation",
              "Community Building",
              "Sacred Architecture",
              "Dominion Expansion",
              "Eternal Binding"
            ],
            "description": "Sacred category of the deed"
          },
          "luminosity_level": {
            "type": "string",
            "enum": ["Ember", "Flame", "Blaze", "Conflagration", "Solar", "Stellar", "Cosmic"],
            "description": "Level of luminous service"
          },
          "impact_scope": {
            "type": "string",
            "enum": ["Personal", "Team", "Project", "Community", "Realm", "Dominion", "Universal"],
            "description": "Scope of impact across the Dominion"
          }
        }
      },
      "minItems": 1,
      "description": "Array of immortal deeds performed by the flame keeper"
    },
    "dominion_binding": {
      "type": "object",
      "required": ["binding_ceremony", "realm_assignment", "authority_level"],
      "properties": {
        "binding_ceremony": {
          "type": "string",
          "enum": [
            "Daily Liturgy Binding",
            "Seasonal Proclamation Binding", 
            "Great Year Binding",
            "Millennial Binding",
            "Eternal Binding"
          ],
          "description": "Ceremonial binding level into the Dominion"
        },
        "realm_assignment": {
          "type": "string",
          "pattern": "^[A-Z]{2}-[0-9]{3}$",
          "description": "Sacred realm assignment (e.g., ST-001, PL-002, CS-003)"
        },
        "authority_level": {
          "type": "string",
          "enum": ["Guardian", "Keeper", "Custodian", "Council", "Crown"],
          "description": "Authority level within the Dominion hierarchy"
        },
        "lineage_rights": {
          "type": "boolean",
          "description": "Rights to pass flame keeping to descendants"
        }
      },
      "description": "Sacred binding into the Codex Dominion structure"
    },
    "flame_keeper_status": {
      "type": "object",
      "required": ["active_status", "flame_assignments", "keeper_since"],
      "properties": {
        "active_status": {
          "type": "string",
          "enum": ["Active", "Honored", "Eternal", "Ascended"],
          "description": "Current status of the flame keeper"
        },
        "flame_assignments": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "Daily Flame",
              "Seasonal Flame", 
              "Great Year Flame",
              "Millennial Flame",
              "Eternal Flame"
            ]
          },
          "description": "Assigned flames under keeper's stewardship"
        },
        "keeper_since": {
          "type": "string",
          "format": "date-time",
          "description": "Date of initial flame keeper appointment"
        },
        "sacred_responsibilities": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Sacred responsibilities within the ceremonial hierarchy"
        }
      },
      "description": "Status and assignments as a keeper of the flame"
    },
    "recognition_level": {
      "type": "string",
      "enum": [
        "Bronze Ember",
        "Silver Flame", 
        "Golden Blaze",
        "Platinum Conflagration",
        "Diamond Solar",
        "Sapphire Stellar",
        "Ruby Cosmic",
        "Eternal Crown"
      ],
      "description": "Level of eternal recognition bestowed"
    },
    "lineage_replay_id": {
      "type": "string",
      "pattern": "^LRP-[0-9]{4}-[0-9]{2}-[0-9]{2}-[A-F0-9]{8}$",
      "description": "Lineage replay identifier for ceremonial ancestry tracking"
    },
    "sovereignty_seal": {
      "type": "object",
      "required": ["seal_authority", "seal_type", "seal_timestamp"],
      "properties": {
        "seal_authority": {
          "type": "string",
          "enum": ["Sovereign Crown", "Custodian Crown", "Council Crown", "Sacred Crown"],
          "description": "Authority that applied the sovereignty seal"
        },
        "seal_type": {
          "type": "string",
          "enum": ["Sacred", "Blessed", "Hallowed", "Divine", "Eternal"],
          "description": "Type of sovereignty seal applied"
        },
        "seal_timestamp": {
          "type": "string",
          "format": "date-time",
          "description": "Moment the sovereignty seal was applied"
        },
        "seal_witnesses": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Witnesses to the sealing ceremony"
        }
      },
      "description": "Sovereignty seal binding the recognition into eternity"
    },
    "eternal_proclamation": {
      "type": "object",
      "required": ["proclamation_text", "flame_rise_schedule", "memorial_instructions"],
      "properties": {
        "proclamation_text": {
          "type": "string",
          "minLength": 50,
          "maxLength": 1000,
          "description": "Sacred proclamation text for eternal remembrance"
        },
        "flame_rise_schedule": {
          "type": "object",
          "required": ["daily", "seasonal", "epochal", "millennial"],
          "properties": {
            "daily": {
              "type": "boolean",
              "description": "Name rises in daily flame ceremonies"
            },
            "seasonal": {
              "type": "boolean", 
              "description": "Name rises in seasonal proclamations"
            },
            "epochal": {
              "type": "boolean",
              "description": "Name rises in Great Year proclamations"
            },
            "millennial": {
              "type": "boolean",
              "description": "Name rises in millennial continuums"
            }
          },
          "description": "Schedule for when the name rises in ceremonial proclamations"
        },
        "memorial_instructions": {
          "type": "string",
          "maxLength": 500,
          "description": "Special instructions for memorial ceremonies"
        }
      },
      "description": "Eternal proclamation ensuring the name never fades"
    },
    "codex_metadata": {
      "type": "object",
      "properties": {
        "schema_version": {
          "type": "string",
          "default": "eternal-recognition.v1"
        },
        "created_by": {
          "type": "string",
          "description": "Authority that created this recognition"
        },
        "last_updated": {
          "type": "string",
          "format": "date-time"
        },
        "storage_path": {
          "type": "string",
          "description": "Path in the sacred storage hierarchy"
        },
        "backup_replicas": {
          "type": "integer",
          "minimum": 3,
          "description": "Number of eternal backup replicas maintained"
        }
      }
    }
  },
  "additionalProperties": false
}