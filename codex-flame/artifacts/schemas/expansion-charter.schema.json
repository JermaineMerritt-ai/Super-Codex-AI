{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "expansion-charter.v1",
  "title": "Expansion Charter Schema",
  "description": "Schema for Codex expansion charters across sectors and realms",
  "type": "object",
  "required": [
    "charter_id",
    "timestamp",
    "sector",
    "realm_name",
    "expansion_status",
    "invocation_protocols",
    "contributor_roles",
    "sectoral_intelligence",
    "onboarding_scrolls",
    "governance_structure",
    "ceremonial_seals",
    "sovereign_authority",
    "schema_version"
  ],
  "properties": {
    "charter_id": {
      "type": "string",
      "pattern": "^EXP-\\d{4}-\\d{2}-\\d{2}-[A-F0-9]{8}$",
      "description": "Unique expansion charter identifier"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "Timestamp when charter was created"
    },
    "sector": {
      "type": "string",
      "enum": [
        "healthcare", "finance", "education", "manufacturing", "retail",
        "transportation", "energy", "legal", "media", "climate_tech",
        "health_wellness", "crypto_gaming", "ai_agriculture", "digital_education",
        "smart_infrastructure", "space_interstellar"
      ],
      "description": "Sector for expansion"
    },
    "realm_name": {
      "type": "string",
      "description": "Name of the realm being chartered"
    },
    "expansion_status": {
      "type": "string",
      "enum": ["CHARTER_ACTIVATED", "REALM_OPERATIONAL", "SOVEREIGN_STATUS"],
      "description": "Status of the expansion"
    },
    "invocation_protocols": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 1,
      "description": "Realm-specific invocation protocols"
    },
    "contributor_roles": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 1,
      "description": "Available contributor roles in the realm"
    },
    "sectoral_intelligence": {
      "type": "object",
      "properties": {
        "primary_metrics": {
          "type": "array",
          "items": {"type": "string"}
        },
        "ceremonial_cycles": {
          "type": "array",
          "items": {"type": "string"}
        },
        "governance_councils": {
          "type": "array",
          "items": {"type": "string"}
        }
      },
      "description": "Intelligence framework for the sector"
    },
    "onboarding_scrolls": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Scrolls for contributor onboarding"
    },
    "governance_structure": {
      "type": "object",
      "properties": {
        "sovereign_council": {"type": "string"},
        "operational_councils": {
          "type": "array",
          "items": {"type": "string"}
        },
        "ceremonial_authority": {"type": "string"},
        "audit_framework": {"type": "string"},
        "recognition_system": {"type": "string"}
      },
      "description": "Governance structure for the realm"
    },
    "ceremonial_seals": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Seals used in realm ceremonies"
    },
    "sovereign_authority": {
      "type": "string",
      "description": "Authority under which charter is granted"
    },
    "schema_version": {
      "type": "string",
      "const": "expansion-charter.v1",
      "description": "Schema version for validation"
    }
  },
  "additionalProperties": false
}