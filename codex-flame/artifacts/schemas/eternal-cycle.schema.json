{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "eternal-cycle.v1",
  "title": "Eternal Cycle Schema",
  "description": "Schema for eternal cycles encompassing all time scales from daily to millennial",
  "type": "object",
  "required": [
    "cycle_id",
    "daily_cycles",
    "seasonal_cycles", 
    "annual_cycles",
    "epochal_cycles",
    "millennial_cycles",
    "eternal_status",
    "flame_continuity",
    "schema_version"
  ],
  "properties": {
    "cycle_id": {
      "type": "string",
      "pattern": "^CY-\\d{4}-\\d{2}-\\d{2}-[A-F0-9]{8}$",
      "description": "Unique eternal cycle identifier"
    },
    "daily_cycles": {
      "type": "integer",
      "minimum": 0,
      "description": "Number of daily cycles completed"
    },
    "seasonal_cycles": {
      "type": "integer",
      "minimum": 0,
      "description": "Number of seasonal cycles completed"
    },
    "annual_cycles": {
      "type": "integer",
      "minimum": 0,
      "description": "Number of annual cycles completed"
    },
    "epochal_cycles": {
      "type": "integer",
      "minimum": 0,
      "description": "Number of epochal cycles completed"
    },
    "millennial_cycles": {
      "type": "integer",
      "minimum": 0,
      "description": "Number of millennial cycles completed"
    },
    "eternal_status": {
      "type": "string",
      "enum": [
        "INFINITE CONTINUUM ACTIVE",
        "CYCLE COMPLETING",
        "TRANSITION PENDING"
      ],
      "description": "Status of the eternal cycle"
    },
    "flame_continuity": {
      "type": "string",
      "enum": [
        "UNBROKEN ACROSS ALL SCALES",
        "MAINTAINED",
        "RESTORING"
      ],
      "description": "Continuity of the sacred flame"
    },
    "schema_version": {
      "type": "string",
      "const": "eternal-cycle.v1",
      "description": "Schema version for validation"
    }
  },
  "additionalProperties": false
}