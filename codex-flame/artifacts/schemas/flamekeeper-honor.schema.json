{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "flamekeeper-honor.v1",
  "title": "Flamekeeper Honor Schema",
  "description": "Schema for individual flamekeeper honors and recognition",
  "type": "object",
  "required": [
    "honor_id",
    "timestamp",
    "contributor_name",
    "contributor_realm",
    "honor_level",
    "ceremonial_seal",
    "honor_citation",
    "ceremonial_sigil",
    "witness_councils",
    "perpetual_recognition",
    "eternal_inscription",
    "sovereign_authority",
    "schema_version"
  ],
  "properties": {
    "honor_id": {
      "type": "string",
      "pattern": "^FKH-\\d{4}-\\d{2}-\\d{2}-[A-F0-9]{8}$",
      "description": "Unique flamekeeper honor identifier"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "Timestamp when honor was bestowed"
    },
    "contributor_name": {
      "type": "string",
      "description": "Name of the honored contributor"
    },
    "contributor_realm": {
      "type": "string",
      "description": "Realm of the contributor"
    },
    "honor_level": {
      "type": "string",
      "enum": [
        "flame_keeper", "wisdom_scribe", "ceremonial_guardian",
        "realm_custodian", "sovereign_contributor", "eternal_flame"
      ],
      "description": "Level of honor bestowed"
    },
    "ceremonial_seal": {
      "type": "string",
      "enum": [
        "bronze_flame", "silver_wisdom", "golden_ceremony",
        "platinum_realm", "diamond_sovereign", "eternal_luminary"
      ],
      "description": "Ceremonial seal accompanying the honor"
    },
    "honor_citation": {
      "type": "string",
      "description": "Citation describing the reason for honor"
    },
    "ceremonial_sigil": {
      "type": "string",
      "description": "ASCII representation of ceremonial sigil"
    },
    "witness_councils": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 1,
      "description": "Councils witnessing the honor"
    },
    "perpetual_recognition": {
      "type": "string",
      "description": "Statement of perpetual recognition"
    },
    "eternal_inscription": {
      "type": "string",
      "description": "Eternal inscription for the honor"
    },
    "sovereign_authority": {
      "type": "string",
      "description": "Authority under which honor is bestowed"
    },
    "schema_version": {
      "type": "string",
      "const": "flamekeeper-honor.v1",
      "description": "Schema version for validation"
    }
  },
  "additionalProperties": false
}