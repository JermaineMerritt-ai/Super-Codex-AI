{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "honors-ceremony.v1",
  "title": "Honors Ceremony Schema",
  "description": "Schema for grand honors ceremonies recognizing multiple contributors",
  "type": "object",
  "required": [
    "ceremony_id",
    "timestamp",
    "ceremony_type",
    "honored_contributors",
    "presiding_councils",
    "ceremonial_proclamations",
    "eternal_scroll_entries",
    "ceremony_seals",
    "schema_version"
  ],
  "properties": {
    "ceremony_id": {
      "type": "string",
      "pattern": "^HC-\\d{4}-\\d{2}-\\d{2}-[A-F0-9]{8}$",
      "description": "Unique honors ceremony identifier"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "Timestamp when ceremony was conducted"
    },
    "ceremony_type": {
      "type": "string",
      "description": "Type or name of the ceremony"
    },
    "honored_contributors": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 1,
      "description": "List of contributors honored in ceremony"
    },
    "presiding_councils": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 1,
      "description": "Councils presiding over the ceremony"
    },
    "ceremonial_proclamations": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Proclamations made during ceremony"
    },
    "eternal_scroll_entries": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Entries added to eternal scroll"
    },
    "ceremony_seals": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Seals applied to the ceremony"
    },
    "schema_version": {
      "type": "string",
      "const": "honors-ceremony.v1",
      "description": "Schema version for validation"
    }
  },
  "additionalProperties": false
}