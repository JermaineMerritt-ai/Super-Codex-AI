[Unit]
Description=Axiom Flame API Service
After=network.target

[Service]
Type=simple
User=axiom-flame
WorkingDirectory=/opt/axiom-flame
Environment=PATH=/opt/axiom-flame/venv/bin
Environment=FLASK_APP=packages/api/app.py
Environment=FLASK_ENV=production
ExecStart=/opt/axiom-flame/venv/bin/python -m flask run --host=0.0.0.0 --port=5000
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target