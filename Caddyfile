your-domain.com {
  encode gzip
  handle_path /api* { reverse_proxy 127.0.0.1:8010 }
  handle_path /ws*  { reverse_proxy 127.0.0.1:8010 }
  handle { reverse_proxy 127.0.0.1:3001 }
}

